<h3>Add Story</h3>
<h2><span></span></h2>
<div class="row">
  <form action="/stories/{{story._id}}" method="POST" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" id="title" value="{{story.title}}" />
        <input type="hidden" name="_method" value="PUT" />
        <label for="title">Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <label for="status"></label>
        <select name="status" id="status">
          {{#select story.status}}
            <option value="public" selected>Public</option>
            <option value="private">Private</option>
            <option value="unpublished">Unpublished</option>
          {{/select}}
        </select>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story</h5>
        <label for="body"></label>
        <textarea name="body" id="body">{{story.body}}</textarea>
      </div>
    </div>

    <div class="row">
      <input type="submit" value="Save" class="btn" />
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>